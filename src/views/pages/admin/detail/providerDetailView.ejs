<!-- Dashboard cabecera -->
<section class="db__header">
    <section class="db__header-row">
        <div class="db__header__text-wrapper">
            <h2 class="db__header__title">Detalle</h2>
            <span class="db__header__description">Información completa de la coleccion</span>
        </div>
        <div class="db__header__btn">
            <button id="back_btn" class="btn-square--db btn-square--db-discard" type="reset">
                <iconify-icon icon="tabler:circle-arrow-left" width="2.2rem" height="2.2rem"></iconify-icon>
                Regresar</button>
            <a class="btn-square--db" href="/admin/provider/edit/<%= provider.provider_id %>">
                <iconify-icon icon="tabler:edit" width="2.2rem" height="2.2rem"></iconify-icon>
                Editar</a>
        </div>
    </section>
</section>


<section class="db__body">

    <section class="db-col-2">

        <article class="card">
            <section class="card__header">
                <h4 class="card__title">Informacion general</h4>
            </section>
            <section class="card__body">
                <div class="card__row">
                    <div class="card__inputs-group">
                        <h5>Nombre</h5>
                        <p><%= provider.provider_name %></p>
                    </div>
                </div>
                
                <div class="card__row">
                    <div class="card__inputs-group">
                        <h5>Observacion</h5>
                        <p><%= provider.provider_observation %></p>
                    </div>
                </div>

                <div class="card__row">
                    <div class="card__inputs-group">
                        <h5>Telefono de contacto</h5>
                        <p><%= provider.provider_tel %></p>
                    </div>
                </div>
                
            </section>
        </article>
        <article class="card">
            <section class="card__header">
                <h4 class="card__title">Productos de este proveedor</h4>
            </section>
            <section class="card__body">
                <table id="adminTable" class="table-admin">
                    <thead class="table-admin__head">

                        <tr class="table-admin__tr">
                            <th class="table-admin__td">ID</th>
                            <th class="table-admin__td">Colección</th>
                            <th class="table-admin__td" colspan="2">Nombre</th>
                            <th class="table-admin__td">Precio</th>
                            <th class="table-admin__td">Stock</th>
                            <th class="table-admin__td" data-sortable="false"></th>
                            <th class="table-admin__td" data-sortable="false"></th>
                        </tr>
                    </thead>
                    <tbody class="table-admin__body">
                        <% products.forEach((product)=> { %>
                            <tr class="table-admin__tr">
                                <td class="table-admin__td">
                                    <%= product.product_id %>
                                </td>
                                <td class="table-admin__td">
                                    <a class="table-admin__icon--edit" href="/admin/collection/detail/<%= product.collection_id %>">
                                        <%= product.collection_name %>
                                    </a>
                                </td>
                                <td class="table-admin__td" colspan="2">
                                    <a class="table-admin__icon--edit" href="/admin/product/detail/<%= product.product_id %>">
                                        <%= product.product_name %>
                                    </a>
                                </td>
                                <td class="table-admin__td">
                                    $ <%= product.product_price %>
                                </td>
                                <td class="table-admin__td">
                                    <%= product.product_stock %>
                                </td>
                                <td class="table-admin__td table-admin__icon">
                                    <a class="table-admin__icon--edit" href="/admin/product/detail/<%= product.product_id %>">
                                        <iconify-icon icon="tabler:list"></iconify-icon>
                                    </a>
                                </td>
                                <td class="table-admin__td table-admin__icon" width="30">
                                    <a class="table-admin__icon--edit" href="/admin/product/edit/<%= product.product_id %>">
                                        <iconify-icon icon="tabler:edit"></iconify-icon>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </section>
        </article>
    </section>
</section>