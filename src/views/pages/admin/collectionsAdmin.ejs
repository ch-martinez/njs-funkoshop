<main>
    <div class=" container-admin">
        <%- include('../../components/admin/sidebar.ejs')%>

        <section class="content">
            <article class="card-admin">
                MENU DE BUSQUEDA
            </article>
            <article class="card-admin">
                <table id="adminTable" class="table-admin">
                    <thead class="table-admin__head">
                        <tr class="table-admin__tr">
                            <th class="table-admin__td">ID</th>
                            <th class="table-admin__td">Descripci√≥n</th>
                            <th class="table-admin__td" colspan="3">Nombre</th>
                            <th class="table-admin__td" data-sortable="false"></th>
                            <th class="table-admin__td" data-sortable="false"></th>
                        </tr>
                    </thead>
                    <tbody class="table-admin__body">
                        <% collections.forEach((collection)=> { %>
                            <tr class="table-admin__tr">
                                <td class="table-admin__td">
                                    <%= collection.collection_id %>
                                </td>
                                <td class="table-admin__td">
                                    <%= collection.collection_name %>
                                </td>
                                <td class="table-admin__td" colspan="3">
                                    <%= collection.collection_description %>
                                </td>
                                <td class="table-admin__td table-admin__icon">
                                    <a class="table-admin__icon--edit" href="/admin/collections/edit/:<%= collections.collections_id %>">
                                        <iconify-icon icon="akar-icons:edit"></iconify-icon>
                                    </a>
                                </td>
                                <td class="table-admin__td table-admin__icon">
                                    <a class="table-admin__icon--delet" href="">
                                        <iconify-icon icon="akar-icons:circle-x"></iconify-icon>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </article>
        </section>
    </div>
</main>